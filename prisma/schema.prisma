generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  redirect = env("REDIRECT_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model certifications {
  id     String    @id @db.Uuid
  title  String?   @db.VarChar(200)
  issuer String?   @db.VarChar(200)
  date   DateTime? @db.Date
  link   String?   @db.VarChar(255)
  image  String?   @db.VarChar(255)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model contacts {
  id    String  @id @db.Uuid
  type  String? @db.VarChar(50)
  value String? @db.VarChar(255)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model education {
  id      String  @id @db.Uuid
  degree  String? @db.VarChar(200)
  school  String? @db.VarChar(200)
  period  String? @db.VarChar(100)
  details String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model experience {
  id      String  @id @db.Uuid
  role    String? @db.VarChar(200)
  company String? @db.VarChar(200)
  period  String? @db.VarChar(100)
  details String?
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model project_technologies {
  id         String    @id @db.Uuid
  project_id String?   @db.Uuid
  tech       String    @db.VarChar(100)
  projects   projects? @relation(fields: [project_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model projects {
  id                   String                 @id @db.Uuid
  title                String                 @db.VarChar(200)
  description          String?
  github               String?                @db.VarChar(255)
  link                 String?                @db.VarChar(255)
  status               project_status?        @default(Draft)
  created_at           DateTime?              @default(now()) @db.Timestamp(6)
  updated_at           DateTime?              @default(now()) @db.Timestamp(6)
  project_technologies project_technologies[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model skill_labels {
  id       String  @id @db.Uuid
  skill_id String? @db.Uuid
  name     String  @db.VarChar(100)
  skills   skills? @relation(fields: [skill_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model skills {
  id           String         @id @db.Uuid
  category     String         @db.VarChar(100)
  skill_labels skill_labels[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model socials {
  id       String @id @db.Uuid
  platform String @db.VarChar(50)
  icon     String @db.VarChar(50)
  url      String @db.VarChar(255)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model users {
  id         String    @id @db.Uuid
  name       String    @db.VarChar(100)
  title      String?   @db.VarChar(200)
  bio        String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
}

enum project_status {
  Draft
  In_Progress @map("In Progress")
  Completed
  Archived
}
